<div class="card mb-3">
  <h2 class="card-header h4">
    Squirrel #<%= squirrel.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= squirrel.name %></dd>
      <!-- Display name end -->

      <dt>Description</dt>
      <!-- Display description start -->
      <dd><%= squirrel.description %></dd>
      <!-- Display description end -->

      <dt>Age</dt>
      <!-- Display age start -->
      <dd><%= squirrel.age %></dd>
      <!-- Display age end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back squirrel, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link squirrel start -->
      <div class="col">
        <%= link_to edit_squirrel_url(squirrel), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link squirrel end -->

      <!-- Delete link squirrel start -->
      <div class="col">
        <%= link_to squirrel, method: :delete, data: { confirm: "Do you really want to delete this squirrel?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link squirrel end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(squirrel.updated_at) %> ago
  </div>
</div>
